<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>{{name}} — Resume</title>
    <style>
        @page {
            size: A4;
            margin: 0.5in 0.6in;
        }

        *,
        *::before,
        *::after {
            box-sizing: border-box;
            margin: 0;
            padding: 0;
        }

        body {
            font-family: 'Georgia', 'Times New Roman', serif;
            font-size: 10.5pt;
            line-height: 1.55;
            color: #222;
            -webkit-print-color-adjust: exact;
            print-color-adjust: exact;
        }

        a {
            color: #1565c0;
            text-decoration: none;
        }

        /* ── Two-column layout ───────────────────────── */
        .wrapper {
            display: flex;
            gap: 24px;
        }

        .sidebar {
            width: 30%;
            min-width: 160px;
            padding-top: 4px;
        }

        .main {
            flex: 1;
        }

        /* ── Header ──────────────────────────────────── */
        .header {
            margin-bottom: 14px;
        }

        .header h1 {
            font-size: 22pt;
            font-weight: 700;
            color: #1b3a4b;
            margin-bottom: 2px;
        }

        .header .tagline {
            font-size: 11pt;
            color: #666;
            font-style: italic;
        }

        .header hr {
            border: none;
            border-top: 3px solid #1b3a4b;
            margin-top: 10px;
        }

        /* ── Sidebar sections ────────────────────────── */
        .side-section {
            margin-bottom: 16px;
        }

        .side-title {
            font-size: 9pt;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1.5px;
            color: #1b3a4b;
            border-bottom: 1px solid #ccc;
            padding-bottom: 3px;
            margin-bottom: 6px;
        }

        .side-item {
            font-size: 9.5pt;
            color: #444;
            margin-bottom: 3px;
        }

        /* ── Main sections ───────────────────────────── */
        .section-title {
            font-size: 11pt;
            font-weight: 700;
            text-transform: uppercase;
            letter-spacing: 1px;
            color: #1b3a4b;
            border-bottom: 1.5px solid #1b3a4b;
            padding-bottom: 3px;
            margin: 16px 0 8px;
            page-break-after: avoid;
        }

        .entry {
            margin-bottom: 10px;
            page-break-inside: avoid;
        }

        .entry-header {
            display: flex;
            justify-content: space-between;
            align-items: baseline;
        }

        .entry-header .title {
            font-weight: 700;
            font-size: 11pt;
        }

        .entry-header .dates {
            font-size: 9pt;
            color: #777;
            white-space: nowrap;
        }

        .entry .subtitle {
            font-size: 10pt;
            color: #555;
        }

        .entry ul {
            margin: 4px 0 0 16px;
            padding: 0;
        }

        .entry li {
            font-size: 10pt;
            margin-bottom: 2px;
            color: #333;
        }

        /* ── Skills pills ────────────────────────────── */
        .skill-pill {
            display: inline-block;
            font-size: 8.5pt;
            padding: 2px 8px;
            border: 1px solid #1b3a4b;
            border-radius: 3px;
            margin: 2px 3px 2px 0;
            color: #1b3a4b;
        }
    </style>
</head>

<body>

    <!-- ── Header ──────────────────────────────────── -->
    <div class="header">
        <h1>{{name}}</h1>
        {{#if title}}<div class="tagline">{{title}}</div>{{/if}}
        <hr />
    </div>

    <div class="wrapper">

        <!-- ── Sidebar ─────────────────────────────── -->
        <div class="sidebar">

            <!-- Contact -->
            <div class="side-section">
                <div class="side-title">Contact</div>
                {{#if email}}<div class="side-item">{{email}}</div>{{/if}}
                {{#if phone}}<div class="side-item">{{phone}}</div>{{/if}}
                {{#if location}}<div class="side-item">{{location}}</div>{{/if}}
                {{#if linkedin}}<div class="side-item"><a href="{{linkedin}}">LinkedIn</a></div>{{/if}}
                {{#if website}}<div class="side-item"><a href="{{website}}">{{website}}</a></div>{{/if}}
            </div>

            <!-- Skills -->
            {{#if skills}}
            <div class="side-section">
                <div class="side-title">Skills</div>
                {{#each skills}}
                <span class="skill-pill">{{this}}</span>
                {{/each}}
            </div>
            {{/if}}

            <!-- Certifications -->
            {{#if certifications}}
            <div class="side-section">
                <div class="side-title">Certifications</div>
                {{#each certifications}}
                <div class="side-item">{{this.name}}</div>
                {{/each}}
            </div>
            {{/if}}
        </div>

        <!-- ── Main content ────────────────────────── -->
        <div class="main">

            <!-- Summary -->
            {{#if summary}}
            <div>
                <div class="section-title">Summary</div>
                <p style="font-size:10pt;color:#333;">{{summary}}</p>
            </div>
            {{/if}}

            <!-- Experience -->
            {{#if experience}}
            <div>
                <div class="section-title">Experience</div>
                {{#each experience}}
                <div class="entry">
                    <div class="entry-header">
                        <span class="title">{{this.title}}</span>
                        <span class="dates">{{date_format this.startDate}} – {{date_format this.endDate}}</span>
                    </div>
                    <div class="subtitle">{{this.company}}{{#if this.location}}, {{this.location}}{{/if}}</div>
                    {{#if this.bullets}}
                    <ul>
                        {{#each this.bullets}}
                        <li>{{this}}</li>
                        {{/each}}
                    </ul>
                    {{/if}}
                </div>
                {{/each}}
            </div>
            {{/if}}

            <!-- Education -->
            {{#if education}}
            <div>
                <div class="section-title">Education</div>
                {{#each education}}
                <div class="entry">
                    <div class="entry-header">
                        <span class="title">{{this.degree}}</span>
                        <span class="dates">{{date_format this.startDate}} – {{date_format this.endDate}}</span>
                    </div>
                    <div class="subtitle">{{this.institution}}</div>
                </div>
                {{/each}}
            </div>
            {{/if}}

            <!-- Projects -->
            {{#if projects}}
            <div>
                <div class="section-title">Projects</div>
                {{#each projects}}
                <div class="entry">
                    <span class="title" style="font-size:10.5pt;">{{this.name}}</span>
                    <div style="font-size:10pt;color:#444;">{{this.description}}</div>
                </div>
                {{/each}}
            </div>
            {{/if}}
        </div>
    </div>

</body>

</html>